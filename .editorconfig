# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true
[*]
quote_type = "single"
insert_final_newline = true
[*.html]
indent_style = tab
indent_size = 4
[*.{js,jsx}]
indent_style = space
indent_size = 4
[*.{css,sass,scss}]
indent_style = space
indent_size = 4
[*.json]
indent_style = space
indent_size = 4
